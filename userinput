#include <stdio.h>

int main() {
    char name[100], gender;
    int age;
    float height;
    printf("Enter Name: ");
    scanf("%s",&name); 
    printf("Enter Age: ");
    scanf("%d", &age);
    printf("Enter Height (in feet): ");
    scanf("%f", &height);
    printf("Enter Gender (M/F): ");
    scanf(" %c", &gender);  
    printf("---  Details ---\n");
    printf("Name\t: %s\n", name);      // \t for tab spacing
    printf("Age\t: %d years\n", age);
    printf("Height\t: %.2f feet\n", height);
    printf("Gender\t: %c\n", gender);

    return 0;
}
